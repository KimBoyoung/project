.form-group
  label(for="title") Event name
  input.form-control(type="text", name="title", placeholder="What's your event?", value=question.title)
.form-group
  label(for="event_location") Event location
  textarea.form-control(name="content", rows="1")= question.content
.containor
  .row
    .col-md-6
      .form-group
        label(for="start_time") Start time
        textarea.form-control(name="content", rows="1")= question.content
    .col-md-6
      .form-group
        label(for="end_time") End time
        textarea.form-control(name="content", rows="1")= question.content
.form-group
  label(for="details") Details
  textarea.form-control(name="content", rows="5")= question.content
.form-group
  label(for="group_name") Group name
  textarea.form-control(name="content", rows="1")= question.content
.form-group
  label(for="group_datails") Group details
  textarea.form-control(name="content", rows="1")= question.content
.form-group
