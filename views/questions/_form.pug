      input(type="checkbox" name="event_type" value="business").
    label(for="field") Science
      input(type="checkbox" name="event_type" value="science").
    label(for="field") Conference
      input(type="checkbox" name="event_type" value="conference").
    label(for="field") Health
      input(type="checkbox" name="event_type" value="health").
    label(for="field") Class
      input(type="checkbox" name="event_type" value="class").
    label(for="field") Art
      input(type="checkbox" name="event_type" value="art").
    label(for="field") Performance
      input(type="checkbox" name="event_type" value="performance").
    label(for="field") Festival
      input(type="checkbox" name="event_type" value="festival").
    label(for="field") Community
      input(type="checkbox" name="event_type" value="community").
.form-group
  label(for="fee") Charge : 
    label(for="free") Free
      input(type="radio" name="event_type" value="a").
    label(for="not free") Charged
      input(type="radio" name="event_type" value="b").
    label(for="how_much")
      textarea.form-control(name="how_much", rows="1").